{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node ESM",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ESNext", "ES2022", "DOM", "DOM.Iterable"],
    "rootDir": ".",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,
    "baseUrl": "./src",
    "sourceRoot": "./src",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./*"]
    }
  }
}
