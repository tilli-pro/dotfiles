    "@tilli-pro/biome": "workspace:*",
    "commitlint": "^19.3.0",
    "eslint": "^9.3.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "turbo": "2.4.3",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "peerDependencyRules": {
